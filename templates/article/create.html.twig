{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
	<h1>
		Ajouter un article
	</h1>

	{{ form_start(formArticle) }}
	<div class="form-group">
		<label for="">Nom</label>
		{{ form_widget(formArticle.name) }}
	</div>	
	<div class="form-group">
		<label for="">Description</label>
		{{ form_widget(formArticle.description) }}
	</div>	
	<div class="form-group">
		<label for="">Prix</label>
		{{ form_widget(formArticle.priceHt) }}
	</div>
	<div class="form-group">
		<label for="">Catalogue</label>
		{{ form_widget(formArticle.catalog) }}
	</div>
	
	<button type="submit" class=" btn btn-success">CREER L'ARTICLE</button>

	
	{{ form_end(formArticle) }}
	
	
		

{% endblock %}

