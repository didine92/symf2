{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}


{% block body %}
	<h1>Inscription</h1>
	<form action="#" method="POST">
		<div class="form-group">

			{{ form_start(form) }}
			{{ form_row(form.username,{'label': "Nom d'utilisateur", 'attr':{'placeholder': 'Entrez votre Nom'}}) }}
			{{ form_row(form.email,{'label': 'Adresse email', 'attr':{'placeholder': 'Entrez votre adresse email'}}) }}
			{{ form_row(form.password,{'label': 'Mot de passe', 'attr':{'placeholder': 'Entrez votre mot de passe'}}) }}
			{{ form_row(form.confirmPassword,{'label':'Confirmation du mot de passe', 'attr':{'placeholder': 'Entrez votre mot de passe Ã  nouveau'}}) }}

			<button type="submit" class=" btn btn-success">Inscription</button>

			{{ form_end(form) }}
		</div>
	</form>	


{% endblock %}